<form class="form-horizontal">
    <div class="control-group">
        <label class="control-label">{{ _('Auth Token') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.thespaghettidetective.auth_token">
            <span class="help-block">Follow the steps in <a href="#">this guide</a> to find the auth token.</span>
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">{{ _('Server Address') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" id="endpoint-prefix" disabled data-bind="value: settings.plugins.thespaghettidetective.endpoint_prefix">
            <div class="form-check" style="margin-top: 8px;">
              <input class="form-check-input" type="checkbox" value="" id="custom-server" style="margin-top: 0px;">
              <label class="form-check-label" for="custom-server" style="display: inline">
                I have my own TSD server. Don't check this unless you know what you are doing.
              </label>
            </div>
        </div>
    </div>
</form>
